FROM python:3.11-slim-bookworm

WORKDIR /app

# Önce requirements dosyasını kopyala
COPY ./requirements.converter.txt .

# requirements dosyasından tüm bağımlılıkları kur
RUN apt-get update && apt-get install -y --no-install-recommends git && \
    pip install --no-cache-dir -r requirements.converter.txt && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

COPY ./scripts/convert_model.py .

# Bu konteyner çalıştığında, sadece convert_model.py script'ini çalıştıracak
CMD ["python", "convert_model.py"]